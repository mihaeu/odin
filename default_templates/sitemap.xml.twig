<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    {% for slug, resource in resources %}
        <url>
            <loc>{{ site.url }}/{{ slug }}</loc>
            <lastmod>{{ resource.date|date("Y-m-d") }}</lastmod>
            <changefreq>{{ resource.changefreq|default("monthly") }}</changefreq>
            <priority>{{ resource.priority|default("0.5")}}</priority>
        </url>
    {% endfor %}
</urlset>
