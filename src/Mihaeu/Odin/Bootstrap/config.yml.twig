#=================================================================================================#
# Basic Settings                                                                                  #
#=================================================================================================#
title: {{ title|default("Example Blog") }}
subtitle: {{ subtitle|default("This is just the beginning ... example.") }}
description: {{ description|default("This blog is all about giving examples.")}}

#=================================================================================================#
# URL                                                                                             #
#-------------------------------------------------------------------------------------------------#
# Please provide the URL to your blog without a trailing slash.                                   #
#=================================================================================================#
url: {{ url|default("http://localhost:8080") }}

#=================================================================================================#
# Authors                                                                                         #
#-------------------------------------------------------------------------------------------------#
# Authors are optional, but will be used for humans.txt, copyright, footer, post meta data etc.   #
#=================================================================================================#
author: {{ author|default("William Shakespear") }}
authors:
- {name: William Shakespear, email: "shakespear@gmail.com", twitter: shakeit, from: "London, England"}

#=================================================================================================#
# Date Format                                                                                     #
#-------------------------------------------------------------------------------------------------#
# Default date throughout the blog. You can override this everywhere in your templates by using   #
# Twigs date() function. (see: twig.sensiolabs.org/doc/functions/date.html)                       #
#=================================================================================================#
date_format: {{ date_format|default("d.m.Y") }}

#=================================================================================================#
# Permalink Pattern                                                                               #
#-------------------------------------------------------------------------------------------------#
# options: :title :Y :y :m :d                                                                     #
#                                                                                                 #
# e.g. /blog/:Y/:m/:title will produce something like /blog/2014/01/awesome-post                  #
#=================================================================================================#
permalink_pattern: {{ permalink_pattern|default("/:title/") }}

#=================================================================================================#
# Pretty URLs                                                                                     #
#-------------------------------------------------------------------------------------------------#
# If true will create a file structure like                                                       #
#                                                                                                 #
# /awesome-post/index.html                                                                        #
#                                                                                                 #
# so the link will be: /awesome-post instead of /awesome-post.html                                #
#=================================================================================================#
pretty_urls: {{ pretty_urls|default("true")}}

#=================================================================================================#
# Extra Resources                                                                                 #
#-------------------------------------------------------------------------------------------------#
# Odin will create these extra resources from a default template for you. Activating this is      #
# highly recommended for SEO.                                                                     #
#=================================================================================================#
create_sitemap_xml: true
create_robots_txt: true
create_humans_txt: true

#=================================================================================================#
# Theme Configuration                                                                             #
#-------------------------------------------------------------------------------------------------#
#                                                                                                 #
#=================================================================================================#
theme: {{ theme|default("default") }}
default_layout: {{ default_layout|default("@theme/index.html.twig") }}
theme_assets: {{ theme_assets|default("%theme_folder%/assets") }}
ignore_assets: {{ ignore_assets|default("[bower_components, node_modules]") }}

#=================================================================================================#
# File Structure                                                                                  #
#-------------------------------------------------------------------------------------------------#
#                                                                                                 #
#=================================================================================================#

project_dir: {{ project_dir }}
output_folder: %project_dir%/output
resource_folder: %project_dir%/content

themes_folder: %project_dir%/themes
theme_folder: %themes_folder%/%theme%
theme_resource_folder: %theme_folder%/resources
user_templates: %resource_folder%/layouts

base_dir: {{ base_dir }}
system_resource_folder: %base_dir%/default_templates
system_templates: %base_dir%/default_templates

resource_extensions: [md,markdown,twig,html,xhtml,rst,txt,xml]
